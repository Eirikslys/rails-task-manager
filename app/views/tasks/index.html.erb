<ul>
  <% @tasks.each do |task|%>
    <li><%= check_box_tag(checked = task.completed, options = :disabled) %><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

  <% end %>
</ul>

